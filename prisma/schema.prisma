generator client {
  provider = "prisma-client-js"
  //output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role{
  ADMIN
  CLIENT
}

enum InvoiceStatus{
  DRAFT
  SENT
  PAID
  OVERDUE
}

model User{
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  name     String
  role     Role
  clients Client[] @relation("UserClient")
  createdAt DateTime @default(now())
  invoices  Invoice[]
}


model Client{
  id       String   @id @default(uuid())
  name     String
  email    String
  company  String?
  phone    String?
  userId   String
  user     User  @relation("UserClient",fields: [userId], references: [id])
  createdAt  DateTime  @default(now())
}

model Invoice {
  id   String   @id @default(uuid())
  clientId String 
  client   String
  userId   String
  user User     @relation(fields: [userId] , references: [id])
  issueDate  DateTime    @default(now())
  dueDate    DateTime
  status     InvoiceStatus
  totalAmount  Float
  notes        String?
  pdfUrl       String?
  isRecurring   Boolean     @default(false)
  createdAt     DateTime   @default(now())
}
